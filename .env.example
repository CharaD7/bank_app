# Appwrite Configuration
# The endpoint for the Appwrite API (usually https://cloud.appwrite.io/v1 for Appwrite Cloud)
EXPO_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1

# Your Appwrite project ID - Get this from your Appwrite dashboard
# Go to: Appwrite Dashboard > Project Settings > General
EXPO_PUBLIC_APPWRITE_PROJECT_ID=your_actual_project_id

# The platform identifier for your app
# IMPORTANT: You must register this platform in your Appwrite dashboard
# Go to: Appwrite Dashboard > Project Settings > Platforms > Add Platform > Android
# Enter the package name exactly as shown below
EXPO_PUBLIC_APPWRITE_PLATFORM=com.username.vault

# Your Appwrite database ID
# Go to: Appwrite Dashboard > Databases > [Your Database] > Settings
EXPO_PUBLIC_APPWRITE_DATABASE_ID=your_database_id

# Your Appwrite user collection ID
# Go to: Appwrite Dashboard > Databases > [Your Database] > Collections > [User Collection]
EXPO_PUBLIC_APPWRITE_USER_COLLECTION_ID=your_user_collection_id

# Paystack Configuration
# Your Paystack public key - Get this from your Paystack dashboard
EXPO_PUBLIC_PAYSTACK_PUBLIC_KEY=your_paystack_public_key

# Default email for Paystack transactions (used for testing)
EXPO_PUBLIC_PAYSTACK_DEFAULT_EMAIL=your_default_email@example.com

# Currency code for Paystack transactions
EXPO_PUBLIC_PAYSTACK_CURRENCY=GHS

# Application Environment
# Options: development, production, testing
EXPO_PUBLIC_APP_ENV=development